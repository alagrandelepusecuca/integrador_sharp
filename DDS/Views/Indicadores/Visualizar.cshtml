@model DDS.Models.Indicador

@{
    ViewBag.Title = "Visualizar indicadores";
}

<form method="POST" action="Visualizar">
    <table style="margin: 0 auto">
        <tr>
            <td style="text-align:right">Indicador</td>
            <td style="padding-left:10px">
                <select name="nombreIndicador" style="min-width:200px">
                    @foreach (string n in ViewBag.NombresIndicadores) {
                        if (@n == ViewBag.NombreIndicador) {
                            <option selected>@n</option>
                        } else {
                            <option>@n</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td style="text-align:right">Empresa</td>
            <td style="padding-left:10px">
                <select name="nombreEmpresa" style="min-width:200px">
                    @foreach (string n in ViewBag.NombresEmpresas) {
                        if (@n == ViewBag.NombreEmpresa) {
                            <option selected>@n</option>
                        } else {
                            <option>@n</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td style="text-align:right">Período</td>
            <td style="padding-left:10px">
                <select name="período" style="min-width:200px">
                    @foreach (int p in ViewBag.Períodos) {
                        if (@p == ViewBag.Período) {
                            <option selected>@p</option>
                        } else {
                            <option>@p</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Buscar" />
            </td>
        </tr>
    </table>
</form>

@if (ViewBag.Valor != null) {
    <br />
    <table class="table">
        <tr>
            <th style="text-align:center">Indicador</th>
            <th style="text-align:center">Valor</th>
        </tr>
        <tr>
            <td>ViewBag.NombreIndicador</td>
            <td>ViewBag.Valor</td>
        </tr>
    </table>
}