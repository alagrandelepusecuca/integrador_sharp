@model DDS.Models.Metodología

@{
    ViewBag.Title = "Agregar metodología";
}

<form method="POST" action="Procesar">
    <table style="margin: 0 auto">
        <tr>
            <td style="text-align:right">Nombre</td>
            <td style="padding-left:10px">
                <input style="margin: 5px auto" type="text" name="nombre" />
            </td>
        </tr>
        <tr>
            <td style="text-align:right">Fórmula</td>
            <td style="padding-left:10px">
                <input style="margin: 5px auto" type="text" name="fórmula" />
            </td>
        </tr>
        <tr>
            <td style="text-align:right">¿Es histórico?</td>
            <td style="padding-left:10px">
                <input style="margin: 5px auto" type="checkbox" name="esHistórico" />
            </td>
        </tr>
        <tr>
            <td style="text-align:right">¿Es comparativo?</td>
            <td style="padding-left:10px">
                <input style="margin: 5px auto" type="checkbox" name="esComparativo" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Enviar" />
            </td>
        </tr>
    </table>
</form>